<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    tools:context=".ConfirmFinalOrder">

    <TextView
        android:id="@+id/am"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Total Amount"
        android:textSize="40dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_below="@+id/am"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/rs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Rs."
        android:textSize="50dp"
        android:layout_marginLeft="120dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/totalamt"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:text="Total"
        android:textSize="50dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please write your shipment Details"
        android:textSize="18dp"
        android:layout_below="@+id/line"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/shipment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_design"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:hint="Enter Your Name"
        />
    <EditText
        android:id="@+id/shipment_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/input_design"
        android:layout_below="@+id/shipment_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginRight="20dp"

        android:inputType="number"
        android:hint="Enter Your Phone Number"
        />
    <EditText
        android:id="@+id/shipment_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_address"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="10dp"

        android:background="@drawable/input_design"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="City"
        />
    <EditText
        android:id="@+id/shipment_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_phone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:background="@drawable/input_design"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginRight="20dp"
        android:inputType="textImeMultiLine"
        android:hint="Delivery Address"
        />
    <Button
        android:id="@+id/confirm_final_btn"
        android:layout_below="@+id/shipment_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Procced to payment"
        android:background="@drawable/buttons"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        />

</RelativeLayout>
</ScrollView>