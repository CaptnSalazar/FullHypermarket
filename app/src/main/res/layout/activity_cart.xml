<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".CartActivity">
    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/backbtn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:textSize="30dp"
            android:fontFamily="@font/proximanovaregular"
            android:textColor="#3c4b5d"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl"
        android:layout_height="match_parent"
        android:background="@drawable/circularbordersolid"
      android:layout_above="@+id/next_process_btn"
        >

    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_marginTop="290dp"
        android:text="Congratulations Your Order is Placed and will be verified soon."
        android:textSize="20dp"
android:visibility="gone"
        />
    <Button
        android:id="@+id/next_process_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circularbluebordersolid"
        android:layout_margin="20dp"
        android:fontFamily="@font/proximanovaregular"
        android:text="Proceed to payment option"
        android:textColor="@color/white"
        android:textSize="20dp"
        />


</RelativeLayout>