<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:background="@color/bg_color"
    tools:context=".AddNewProductActivity">
    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/backbtn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:id="@+id/name11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center"
            android:text="Add New Product"
            android:textStyle="bold"
            android:textColor="#3c4b5d"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proximanovaregular"
            android:gravity="center"
            android:text="Time to Stock up the store !"
            android:textColor="@color/darkgrey"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/name11"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/select_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/circularbluebordersolid"
            android:src="@drawable/select_product_image" />

        <EditText
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_product_image"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/circularbordersolid"
            android:fontFamily="@font/proximanovaregular"
            android:hint="Product Name"
            android:inputType="textImeMultiLine"
            android:padding="10dp"
            android:textColor="#3c4b5d"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/productdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productname"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/circularbordersolid"
            android:fontFamily="@font/proximanovaregular"
            android:hint="Product Discription"
            android:inputType="textImeMultiLine"
            android:padding="10dp"
            android:textColor="#3c4b5d"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/productprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productdescription"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/circularbordersolid"
            android:fontFamily="@font/proximanovaregular"
            android:hint="Product Price"
            android:inputType="textImeMultiLine"
            android:padding="10dp"
            android:textColor="#3c4b5d"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/categories"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productprice"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:background="@android:drawable/btn_dropdown"
            android:hint="Category"
            android:padding="10dp"
            android:spinnerMode="dropdown"
            android:textColorHint="@android:color/black" />

        <EditText
            android:id="@+id/productquantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categories"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/circularbordersolid"
            android:fontFamily="@font/proximanovaregular"
            android:hint="Quantity"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#3c4b5d"
            android:textSize="15sp" />

        <Button
            android:id="@+id/add_new_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categories"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/circularbluebordersolid"
            android:fontFamily="@font/proximanovaregular"
            android:padding="17dp"
            android:text="Add Product"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>